<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Studentsup">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:layout_width="500dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/roundedtop_shape" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/coolveticarg"
            android:paddingLeft="15dp"
            android:text="Student"
            android:textColor="@color/colorBlack"
            android:textSize="50dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/coolveticarg"
            android:paddingLeft="84dp"
            android:paddingTop="45dp"
            android:text="support"
            android:textColor="@color/colorBlack"
            android:textSize="32dp" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="250dp"
            android:paddingTop="10dp"
            android:src="@drawable/headphones" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="150dp">

            <!--INPUT HERE-->

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/coolveticarg"
                        android:text="Contac Us"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="20dp" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="100dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:onClick="whatsapp"
                            android:id="@+id/whatsapp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_toLeftOf="@+id/gmail"
                            android:background="@drawable/wa" />

                        <ImageButton
                            android:onClick="email"
                            android:id="@+id/gmail"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:background="@drawable/gm" />

                        <ImageButton
                            android:onClick="studentsup"
                            android:id="@+id/studentsup"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_toRightOf="@id/gmail"
                            android:background="@drawable/cs" />


                    </RelativeLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/coolveticarg"
                        android:text="Visit Us"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="20dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="20dp"
                        android:src="@drawable/umnhorizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="30dp"
                        android:text="Universitas Multimedia Nusantara \n
Jl. Scientia Boulevard, Gading Serpong, Tangerang, \nBanten-15811 Indonesia"
                        android:textAlignment="center"
                        android:textSize="15dp" />

                </LinearLayout>

            </ScrollView>

        </LinearLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>