<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:fontFamily="@font/coolveticarg"
                android:textSize="50dp"
                android:paddingLeft="15dp"
                android:textColor="@color/colorBlack"/>

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:paddingTop="8dp"
                android:layout_marginLeft="370dp"
                android:background="@drawable/ic_edit_black_24dp" />

            <LinearLayout
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="100dp">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rounded"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/pictureProfile"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/userp" />


                    <TextView
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="lorem@student.umn.ac.id"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="15dp"
                        android:fontFamily="@font/pompadour"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="50dp"
                        android:text="Nama"
                        android:textColor="@color/colorAbu"
                        android:fontFamily="@font/pompadour"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/Nama"
                        android:fontFamily="@font/pompadour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Lorem Ipsum Lorena"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="35dp"
                        android:text="Nim"
                        android:textColor="@color/colorAbu"
                        android:textSize="25sp"
                        android:fontFamily="@font/pompadour"/>

                    <TextView
                        android:id="@+id/nim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Lorem Ipsum Lorena"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp"
                        android:fontFamily="@font/pompadour" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="35dp"
                        android:text="Fakultas"
                        android:textColor="@color/colorAbu"
                        android:textSize="25sp"
                        android:fontFamily="@font/pompadour"/>

                    <TextView
                        android:id="@+id/fakultas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Lorem Ipsum Lorena"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp"
                        android:fontFamily="@font/pompadour"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="35dp"
                        android:text="Prodi"
                        android:textColor="@color/colorAbu"
                        android:textSize="25sp"
                        android:fontFamily="@font/pompadour"/>

                    <TextView
                        android:id="@+id/prodi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Lorem Ipsum Lorena"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp"
                        android:fontFamily="@font/pompadour"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="35dp"
                        android:text="Angkatan"
                        android:textColor="@color/colorAbu"
                        android:textSize="25sp"
                        android:fontFamily="@font/pompadour"/>

                    <TextView
                        android:id="@+id/angkatan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Lorem Ipsum Lorena"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp"
                        android:fontFamily="@font/pompadour"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />

                    <Button
                        android:id="@+id/logout"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/exit" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:text="logout"
                        android:textAlignment="center"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:text="copyright by "
                        android:textAlignment="center"
                        android:textSize="8sp" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>